<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jasper.myandroidtest" >

    <!-- SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 向SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 摄像头 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 录制音频 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- 通过使用<uses-feature>元素，一个应用可以指定它所支持的硬件型号 -->
    <!-- 摄像头 硬件支持 -->
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- 这样声明就所有Activity都可以使用搜索，若放在Activity子项里面则只能该Activity可以使用 -->
        <meta-data
            android:name="android.app.default_searchable"
            android:value=".SearchResultActivity" />

        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Tabs1Activity" />
        <activity
            android:name=".Tabs2Activity"
            android:label="@string/title_activity_tabs2" />
        <activity
            android:name=".AsyncTaskActivity"
            android:label="@string/title_activity_async_task" />
        <activity
            android:name=".Tabs3Activity"
            android:label="@string/title_activity_tabs3" />
        <activity
            android:name=".FileActivity"
            android:label="@string/title_activity_file" />
        <activity
            android:name=".CameraActivity"
            android:hardwareAccelerated="false"
            android:label="@string/title_activity_camera" />
        <activity
            android:name=".MyActionBarActivity"
            android:label="@string/title_activity_my_action_bar" >
        </activity>
        <activity
            android:name=".SearchResultActivity"
            android:label="@string/title_activity_search_result" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".preference.FlightPreferenceActivity"
            android:label="@string/title_activity_flight_preference" >
            <intent-filter>
                <category android:name="android.intent.category.PREFERENCE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".preference.MyPreferenceActivity"
            android:label="@string/title_activity_my_preference" >
        </activity>
    </application>

</manifest>
