<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context="com.jasper.myandroidtest.view.EditTextActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        style="@style/my_edittext_log"
        android:text="LOG"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        style="@style/my_edittext_single_line"
        android:textCursorDrawable="@drawable/cursor"
        android:background="@drawable/my_transparent_bg"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        style="@style/my_edittext_single_line"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        style="@style/my_edittext_single_line"
        android:hint="只能输入数字"
        android:numeric="integer"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        style="@style/my_edittext_single_line"
        android:hint="字符限制，只能abc123"
        android:digits="abc123"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        style="@style/my_edittext_single_line"
        android:hint="密码框"
        android:password="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        style="@style/my_edittext_single_line"
        android:hint="最长5个"
        android:maxLength="5"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        style="@style/my_edittext_single_line"
        android:hint="字符长度5"
        android:ems="5"/>

    <EditText
        android:id="@+id/et_action_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        style="@style/my_edittext_single_line"
        android:imeOptions="actionSend"
        android:imeActionLabel="发送"
        android:hint="自定义操作按钮标签"/>

    <AutoCompleteTextView
        android:id="@+id/actv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        style="@style/my_edittext_single_line"
        android:hint="自动提示输入框：万能应用"/>

</LinearLayout>
