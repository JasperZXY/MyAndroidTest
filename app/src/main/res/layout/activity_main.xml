<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flowlayout="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_main"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jasper.myandroidtest.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.jasper.myandroidtest.view.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn4fragmentTabHost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="底部导航栏:FragmentTabHost" />

            <Button
                android:id="@+id/btn4fragment_radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="底部导航栏:Fragment+RadioGroup" />

            <Button
                android:id="@+id/btn4fragment_viewpager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="底部导航栏:Fragment+ViewPager" />

            <Button
                android:id="@+id/btn4imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ImageView的scaleType问题" />

            <Button
                android:id="@+id/btn4actionbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ActionBar" />
            <Button
                android:id="@+id/btn4menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu" />

            <Button
                android:id="@+id/btn4AsyncTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AsyncTask" />

            <Button
                android:id="@+id/btn4file_read_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文件读写" />

            <Button
                android:id="@+id/btn4permission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="权限相关" />

            <Button
                android:id="@+id/btn4camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="摄像头" />

            <Button
                android:id="@+id/btn4preference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首选项" />
            <Button
                android:id="@+id/btn4dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对话框" />

            <Button
                android:id="@+id/btn4simpleListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="简单的ListView" />

            <Button
                android:id="@+id/btn4refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下拉刷新上拉载入" />

            <Button
                android:id="@+id/btn4FragmentManager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FragmentManager" />

            <Button
                android:id="@+id/btn4WebView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WebView" />

            <Button
                android:id="@+id/btn4BitmapCache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BitmapCache使用" />

        </com.jasper.myandroidtest.view.FlowLayout>
    </ScrollView>


</LinearLayout>
