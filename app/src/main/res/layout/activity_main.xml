<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jasper.myandroidtest.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn4fragmentTabHost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="底部导航栏:FragmentTabHost" />

            <Button
                android:id="@+id/btn4fragment_radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="底部导航栏:Fragment+RadioGroup" />

            <Button
                android:id="@+id/btn4fragment_viewpager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="底部导航栏:Fragment+ViewPager" />

            <Button
                android:id="@+id/btn4AsyncTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AsyncTask" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
