<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:id="@+id/layout_main"
    android:background="@drawable/bg"
    tools:context="com.jasper.myandroidtest.ui.notification.NotificationActivity">

    <Button
        android:id="@+id/btn_private_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/my_button"
        android:text="私信"/>

    <Button
        android:id="@+id/btn_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/my_button"
        android:text="Progress"/>

    <Button
        android:id="@+id/btn_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/my_button"
        android:text="自定义"/>

    <RelativeLayout
        android:id="@+id/layout_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/blue_light">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:textSize="14sp"
            android:text="消息"/>

        <TextView
            android:id="@+id/tv_msg_count"
            android:layout_width="wrap_content"
            android:minWidth="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:background="@drawable/my_red_dot"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textSize="12sp"
            android:textColor="#fff"
            android:singleLine="true"
            android:text="1"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/et_log"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:text="日志"
        style="@style/my_edittext_log"/>

</LinearLayout>
