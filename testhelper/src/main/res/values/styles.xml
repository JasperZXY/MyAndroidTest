<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="my_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/my_btn</item>
        <item name="android:text">自定义按钮样式</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="my_edittext_single_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/my_edittext_bg</item>
        <item name="android:hint">请输入...</item>
        <item name="android:padding">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">#AAAAAA</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="my_edittext_log">
        <item name="android:background">@drawable/my_transparent_bg</item>
        <item name="android:padding">3dp</item>
        <item name="android:editable">false</item>
        <item name="android:textColor">#444</item>
        <item name="android:gravity">left</item>
    </style>

</resources>
